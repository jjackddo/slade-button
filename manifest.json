{
    "manifest_version": 3,
    "name": "회장님 말씀",
    "version": "1.0.0",
    "description": "Confluence 페이지에 AI 어시스턴트를 추가합니다.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.atlassian.net/*",
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.atlassian.net/wiki/*"
            ],
            "js": [
                "src/content/index.tsx"
            ]
        },
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/gemini/index.ts"
            ],
            "all_frames": true
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "button-icon.png",
        "32": "button-icon.png",
        "48": "button-icon.png",
        "128": "button-icon.png"
    },
    "action": {
        "default_icon": "button-icon.png",
        "default_title": "회장님 말씀"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "button-icon.png"
            ],
            "matches": [
                "https://*.atlassian.net/*"
            ]
        }
    ]
}